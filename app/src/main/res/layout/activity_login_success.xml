<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginSuccessActivity">


    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="81dp"
            android:layout_height="88dp"
            android:layout_margin="7dp"
            app:srcCompat="@drawable/main_logo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="TextView" />

        <ImageView
            android:id="@+id/mypage_btn"
            android:layout_width="49dp"
            android:layout_height="91dp"
            android:layout_gravity="right"
            android:layout_margin="15dp"
            app:srcCompat="@drawable/list" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/run_info"
            android:layout_width="350dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:background="@drawable/btn_background3"
            android:text="📑 세이프티킥 이용방법"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="350dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_background"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="250dp"
            android:layout_margin="20dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/frameFindKick"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/find_kick"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:scaleX="2.2"
                        android:scaleY="2.5"
                        android:src="@drawable/gps" />

                    <TextView
                        android:id="@+id/find_kick_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="20dp"
                        android:text="킥보드 찾기"
                        android:textColor="@color/yellow"
                        android:textSize="23sp"
                        android:textStyle="bold"/>

                </androidx.cardview.widget.CardView>
            </FrameLayout>


            <FrameLayout
                android:id="@+id/frameQr"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/qr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:scaleX="1.5"
                        android:scaleY="1.5"
                        android:src="@drawable/qr" />

                    <TextView
                        android:id="@+id/qr_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="20dp"
                        android:text="QR 스캔하고\n   대여하기"
                        android:textColor="@color/yellow"
                        android:textSize="23sp"
                        android:textStyle="bold"/>

                </androidx.cardview.widget.CardView>
            </FrameLayout>
        </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/service_center"
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"
            android:layout_weight="1"
            android:background="@drawable/btn_background"
            android:text="세이프티킥 고객센터"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>